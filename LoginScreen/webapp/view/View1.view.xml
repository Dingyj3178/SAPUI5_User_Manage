<mvc:View controllerName="LoginScreen.LoginScreen.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<VBox alignItems="Center" height="50%">
							<Input width="230px" id="userid" type="Text" submit="showdata" value="{inputModel>/userId}"></Input>
							<Input width="230px" id="password" type="Password" submit="showdata" value="{inputModel>/password}"></Input>
							<Button text="login" press=".showdata" class="srchBtn sapUiSmallMarginTop" width="120px"/>
						</VBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>